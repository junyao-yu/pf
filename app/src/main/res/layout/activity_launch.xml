<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:ufreedom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="8dp">


    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="5dp"
        android:text="this is test"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.improving.utils.views.yummytext.YummyTextSwitcher
            android:id="@+id/yummyTextSwitcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            ufreedom:textSize="60dp" />


        <android.improving.utils.views.circleprogressbutton.CircularCountDownButton
            android:id="@+id/circularButton1"
            android:layout_width="196dp"
            android:layout_height="64dp"/>

    </LinearLayout>

    <android.improving.utils.views.CommonEditView
        android:background="@drawable/indicator_bg_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commonEditView"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        ufreedom:hint="test"
        ufreedom:myTextHintColor="@color/color_f98435"
        ufreedom:myTextSize="15"
        ufreedom:myInputType="numberPwd"
        ufreedom:myTextColor="@color/color_353535"/>

    <android.improving.utils.views.ExperienceProgress
        android:id="@+id/experience_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10" />


    <android.improving.utils.views.calendarview.MaterialCalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        app:mcv_selectionColor="@color/color_f98435"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/go_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进入登录"/>
    <Button
        android:id="@+id/go_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进入注册"/>

</LinearLayout>
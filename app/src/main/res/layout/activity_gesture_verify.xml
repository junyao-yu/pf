<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/gesture_bg">

    <LinearLayout
        android:id="@+id/gesture_verify_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/gesture_verify_user_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_icon"/>
        <TextView
            android:id="@+id/gesture_verify_user_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17"
            android:layout_marginTop="@dimen/dp_23"/>
        <TextView
            android:id="@+id/gesture_verify_wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_f53952"
            android:layout_marginTop="@dimen/dp_8"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/gesture_verify_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/gesture_verify_info"/>

    <TextView
        android:id="@+id/gesture_verify_forget"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:text="@string/text_gesture_forget"
        android:textSize="@dimen/sp_15"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/color_50ffffff"/>

</RelativeLayout>